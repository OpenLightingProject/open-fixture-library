{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "COLORband PiX IP",
  "shortName": "ChvtDJCOLORbandPiXIP",
  "categories": ["Pixel Bar", "Color Changer"],
  "meta": {
    "authors": ["Felix Edelmann"],
    "createDate": "2019-04-15",
    "lastModifyDate": "2019-04-15"
  },
  "links": {
    "manual": [
      "https://www.chauvetdj.com/wp-content/uploads/2015/12/COLORband_PiX_IP_UM_Rev2_WO-1.pdf"
    ],
    "productPage": [
      "https://www.chauvetdj.com/products/colorband-pix-ip/"
    ],
    "video": [
      "https://www.youtube.com/watch?v=3LjlTRm3gcs",
      "https://www.youtube.com/watch?v=pgYgSIY2LlI&t=148"
    ]
  },
  "physical": {
    "dimensions": [993, 173, 100],
    "weight": 6.1,
    "power": 103,
    "DMXconnector": "3-pin XLR IP65",
    "bulb": {
      "type": "3W RGB LEDs"
    },
    "lens": {
      "degreesMinMax": [20, 20]
    }
  },
  "matrix": {
    "pixelCount": [12, 1, 1],
    "pixelGroups": {
      "Master": "all",
      "1/2": { "x": ["<=6"] },
      "2/2": { "x": [">=7"] },
      "1/3": ["1", "2", "3", "4"],
      "2/3": ["5", "6", "7", "8"],
      "3/3": ["9", "10", "11", "12"],
      "1/4": ["1", "2", "3"],
      "2/4": ["4", "5", "6"],
      "3/4": ["7", "8", "9"],
      "4/4": ["10", "11", "12"],
      "1/6": ["1", "2"],
      "2/6": ["3", "4"],
      "3/6": ["5", "6"],
      "4/6": ["7", "8"],
      "5/6": ["9", "10"],
      "6/6": ["11", "12"]
    }
  },
  "availableChannels": {
    "Color Macros": {
      "capabilities": [
        {
          "dmxRange": [0, 15],
          "type": "NoFunction"
        },
        {
          "dmxRange": [16, 255],
          "type": "ColorPreset",
          "comment": "Color Macros",
          "helpWanted": "Which colors can be selected at which DMX values?"
        }
      ]
    },
    "Program Speed": {
      "capability": {
        "type": "EffectSpeed",
        "speedStart": "slow",
        "speedEnd": "fast"
      }
    },
    "Strobe": {
      "capabilities": [
        {
          "dmxRange": [0, 15],
          "type": "NoFunction"
        },
        {
          "dmxRange": [16, 255],
          "type": "ShutterStrobe",
          "shutterEffect": "Strobe",
          "speedStart": "0Hz",
          "speedEnd": "30Hz"
        }
      ]
    },
    "Auto Programs": {
      "defaultValue": 0,
      "capabilities": [
        {
          "dmxRange": [0, 31],
          "type": "NoFunction",
          "switchChannels": {
            "Program Speed / Strobe": "Strobe"
          }
        },
        {
          "dmxRange": [32, 63],
          "type": "ShutterStrobe",
          "shutterEffect": "RampUp",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [64, 95],
          "type": "ShutterStrobe",
          "shutterEffect": "RampDown",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [96, 127],
          "type": "ShutterStrobe",
          "shutterEffect": "Pulse",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [128, 159],
          "type": "Effect",
          "effectPreset": "ColorFade",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [160, 191],
          "type": "Effect",
          "effectPreset": "ColorJump",
          "comment": "3 colors",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [192, 223],
          "type": "Effect",
          "effectPreset": "ColorJump",
          "comment": "7 colors",
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        },
        {
          "dmxRange": [224, 255],
          "type": "Effect",
          "effectName": "Sound control",
          "soundControlled": true,
          "switchChannels": {
            "Program Speed / Strobe": "Program Speed"
          }
        }
      ]
    },
    "Dimmer": {
      "capability": {
        "type": "Intensity"
      }
    }
  },
  "templateChannels": {
    "Red $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Green $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Blue $pixelKey": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    }
  },
  "modes": [
    {
      "name": "7-channel",
      "shortName": "7ch",
      "channels": [
        "Red Master",
        "Green Master",
        "Blue Master",
        "Color Macros",
        "Program Speed / Strobe",
        "Auto Programs",
        "Dimmer"
      ]
    },
    {
      "name": "3-channel",
      "shortName": "3ch",
      "channels": [
        "Red Master",
        "Green Master",
        "Blue Master"
      ]
    },
    {
      "name": "4-channel",
      "shortName": "4ch",
      "channels": [
        "Red Master",
        "Green Master",
        "Blue Master",
        "Dimmer"
      ]
    },
    {
      "name": "6-channel",
      "shortName": "6ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": ["1/2", "2/2"],
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    },
    {
      "name": "9-channel",
      "shortName": "9ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": ["1/3", "2/3", "3/3"],
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    },
    {
      "name": "12-channel",
      "shortName": "12ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": ["1/4", "2/4", "3/4", "4/4"],
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    },
    {
      "name": "18-channel",
      "shortName": "18ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": ["1/6", "2/6", "3/6", "4/6", "5/6", "6/6"],
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    },
    {
      "name": "36-channel",
      "shortName": "36ch",
      "channels": [
        {
          "insert": "matrixChannels",
          "repeatFor": "eachPixelABC",
          "channelOrder": "perPixel",
          "templateChannels": [
            "Red $pixelKey",
            "Green $pixelKey",
            "Blue $pixelKey"
          ]
        }
      ]
    }
  ]
}
