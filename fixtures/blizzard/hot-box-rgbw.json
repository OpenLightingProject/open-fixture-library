{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "Hot Box RGBW",
  "categories": ["Color Changer"],
  "meta": {
    "authors": ["Ken Harris"],
    "createDate": "2022-04-06",
    "lastModifyDate": "2022-04-06"
  },
  "comment": "The documentation splits 8-ch and 9-ch modes into \"A\" and \"B\" variants, where the only difference is the max strobe speed.  For OFL, I've encoded only a single variant of each, and used keywords \"slow\"/\"fast\" rather than absolute frequencies.",
  "links": {
    "manual": [
      "https://api.blizzard.lighting/public/Products/hotbox%20rgbw/downloads/hotbox-manual-rev-b.pdf"
    ],
    "productPage": [
      "https://www.blizzardpro.com/products/hotbox-rgbw"
    ]
  },
  "physical": {
    "dimensions": [127, 102, 127],
    "weight": 2.7,
    "power": 47,
    "DMXconnector": "3-pin",
    "bulb": {
      "type": "7× 10W RGBW LEDs"
    },
    "lens": {
      "degreesMinMax": [26, 26]
    }
  },
  "availableChannels": {
    "Hue": {
      "capability": {
        "type": "Generic"
      }
    },
    "Saturation": {
      "capability": {
        "type": "Generic"
      }
    },
    "Dimmer": {
      "capability": {
        "type": "Intensity",
        "comment": "CHECKME: \"Value\" (of \"HSV\") in lighting is the same as intensity, right?"
      }
    },
    "Red": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Green": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Blue": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    },
    "White": {
      "capability": {
        "type": "ColorIntensity",
        "color": "White"
      }
    },
    "Strobe": {
      "capabilities": [
        {
          "dmxRange": [0, 14],
          "type": "ShutterStrobe",
          "shutterEffect": "Strobe",
          "speed": "stop",
          "randomTiming": true
        },
        {
          "dmxRange": [15, 255],
          "type": "ShutterStrobe",
          "shutterEffect": "Strobe",
          "speedStart": "slow",
          "speedEnd": "fast",
          "comment": "Depending on configuration, 0…12 Hz (\"A\") or 0…20 Hz (\"B\")"
        }
      ]
    },
    "Fade, Color Change, Sound Active": {
      "capabilities": [
        {
          "dmxRange": [0, 31],
          "type": "NoFunction"
        },
        {
          "dmxRange": [32, 63],
          "type": "ShutterStrobe",
          "shutterEffect": "RampUp"
        },
        {
          "dmxRange": [64, 95],
          "type": "ShutterStrobe",
          "shutterEffect": "RampDown"
        },
        {
          "dmxRange": [96, 127],
          "type": "ShutterStrobe",
          "shutterEffect": "RampUpDown"
        },
        {
          "dmxRange": [128, 159],
          "type": "Effect",
          "effectPreset": "ColorFade"
        },
        {
          "dmxRange": [160, 191],
          "type": "ShutterStrobe",
          "shutterEffect": "RampUpDown",
          "comment": "\"Auto Run\" -- ch.8 ignored?"
        },
        {
          "dmxRange": [192, 223],
          "type": "Effect",
          "effectPreset": "ColorJump"
        },
        {
          "dmxRange": [224, 255],
          "type": "Effect",
          "effectName": "Sound Active, Multicolor",
          "soundControlled": true
        }
      ]
    },
    "Fade Speed": {
      "capability": {
        "type": "EffectSpeed",
        "speedStart": "slow",
        "speedEnd": "fast"
      }
    },
    "Dimmer Control": {
      "capabilities": [
        {
          "dmxRange": [0, 5],
          "type": "Maintenance",
          "comment": "As set in the control menu display"
        },
        {
          "dmxRange": [6, 55],
          "type": "Maintenance",
          "comment": "Mode 0 = 8-bit, 256 dimming steps"
        },
        {
          "dmxRange": [56, 105],
          "type": "Maintenance",
          "comment": "Mode 1 = 32-bit, 0-25% intensity range"
        },
        {
          "dmxRange": [106, 155],
          "type": "Maintenance",
          "comment": "Mode 2 = 32-bit, 0-50% intensity range"
        },
        {
          "dmxRange": [156, 205],
          "type": "Maintenance",
          "comment": "Mode 3 = 32-bit, 0-75% intensity range"
        },
        {
          "dmxRange": [206, 255],
          "type": "Maintenance",
          "comment": "Mode 4 = 32-bit, full intensity dimming"
        }
      ]
    }
  },
  "modes": [
    {
      "name": "3-channel",
      "shortName": "3ch",
      "channels": [
        "Hue",
        "Saturation",
        "Dimmer"
      ]
    },
    {
      "name": "4-channel",
      "shortName": "4ch",
      "channels": [
        "Red",
        "Green",
        "Blue",
        "White"
      ]
    },
    {
      "name": "5-channel",
      "shortName": "5ch",
      "channels": [
        "Dimmer",
        "Red",
        "Green",
        "Blue",
        "White"
      ]
    },
    {
      "name": "8-channel",
      "shortName": "8ch",
      "channels": [
        "Dimmer",
        "Red",
        "Green",
        "Blue",
        "White",
        "Strobe",
        "Fade, Color Change, Sound Active",
        "Fade Speed"
      ]
    },
    {
      "name": "9-channel",
      "shortName": "9ch",
      "channels": [
        "Dimmer",
        "Red",
        "Green",
        "Blue",
        "White",
        "Strobe",
        "Fade, Color Change, Sound Active",
        "Fade Speed",
        "Dimmer Control"
      ]
    }
  ]
}
