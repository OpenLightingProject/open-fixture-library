{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "BEL6 IP Bar HEX",
  "categories": ["Stand", "Color Changer"],
  "meta": {
    "authors": ["B the pulp"],
    "createDate": "2021-11-30",
    "lastModifyDate": "2021-11-30"
  },
  "links": {
    "manual": [
      "https://images.static-thomann.de/pics/atg/atgdata/document/manual/471167_c_471167_r2_en_online.pdf"
    ],
    "productPage": [
      "https://www.thomann.de/intl/stairville_bel6_ip_bar_hex.htm"
    ],
    "video": [
      "https://video2.thomann.de/vidiot/02591c1c/video_i8892p10_yd59vqpa.mp4"
    ]
  },
  "availableChannels": {
    "Dimmer": {
      "capability": {
        "type": "Intensity"
      }
    },
    "Strobe": {
      "capabilities": [
        {
          "dmxRange": [0, 0],
          "type": "ShutterStrobe",
          "shutterEffect": "Open"
        },
        {
          "dmxRange": [1, 255],
          "type": "ShutterStrobe",
          "shutterEffect": "Strobe",
          "speedStart": "slow",
          "speedEnd": "fast"
        }
      ]
    },
    "Red": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Green": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Blue": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    },
    "White": {
      "capability": {
        "type": "ColorIntensity",
        "color": "White"
      }
    },
    "Amber": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Amber"
      }
    },
    "UV": {
      "capability": {
        "type": "ColorIntensity",
        "color": "UV"
      }
    },
    "Function Selection": {
      "capabilities": [
        {
          "dmxRange": [0, 4],
          "type": "NoFunction"
        },
        {
          "dmxRange": [5, 80],
          "type": "ColorPreset",
          "helpWanted": "Which color can be selected at which DMX value?"
        },
        {
          "dmxRange": [81, 150],
          "type": "Effect",
          "effectPreset": "ColorJump"
        },
        {
          "dmxRange": [151, 220],
          "type": "Effect",
          "effectPreset": "ColorFade"
        },
        {
          "dmxRange": [221, 255],
          "type": "Effect",
          "effectName": "Automatic sound-controlled show",
          "soundControlled": true
        }
      ]
    },
    "Function Speed": {
      "capability": {
        "type": "EffectSpeed",
        "speedStart": "slow",
        "speedEnd": "fast"
      }
    }
  },
  "modes": [
    {
      "name": "6-channel",
      "shortName": "6ch",
      "channels": [
        "Red",
        "Green",
        "Blue",
        "White",
        "Amber",
        "UV"
      ]
    },
    {
      "name": "10-channel",
      "shortName": "10ch",
      "channels": [
        "Dimmer",
        "Strobe",
        "Red",
        "Green",
        "Blue",
        "White",
        "Amber",
        "UV",
        "Function Selection",
        "Function Speed"
      ]
    }
  ]
}
