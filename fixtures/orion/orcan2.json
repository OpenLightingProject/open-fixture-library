{
  "$schema": "https://raw.githubusercontent.com/OpenLightingProject/open-fixture-library/master/schemas/fixture.json",
  "name": "ORCAN2",
  "shortName": "OrionOrcan2",
  "categories": ["Color Changer"],
  "meta": {
    "authors": ["Felix Edelmann"],
    "createDate": "2018-04-04",
    "lastModifyDate": "2018-07-21"
  },
  "links": {
    "manual": [
      "https://orion-fxlights.com/downloads/ownersman/om_orcan2.pdf?v=1427215602"
    ]
  },
  "physical": {
    "dimensions": [255, 365, 255],
    "weight": 2.8,
    "DMXconnector": "3-pin",
    "bulb": {
      "type": "36 x 3W RGB LEDs (12 x Red / 12 x Green / 12 x Blue)"
    }
  },
  "availableChannels": {
    "Master Dimmer": {
      "defaultValue": 0,
      "capability": {
        "type": "Intensity"
      }
    },
    "Strobe": {
      "capability": {
        "type": "ShutterStrobe",
        "shutterEffect": "Strobe",
        "helpWanted": "At which DMX values is Strobe off, where is the speed control?"
      }
    },
    "Effects": {
      "defaultValue": 0,
      "capabilities": [
        {
          "dmxRange": [0, 50],
          "type": "NoFunction"
        },
        {
          "dmxRange": [51, 100],
          "type": "Effect",
          "effectPreset": "ColorJump"
        },
        {
          "dmxRange": [101, 150],
          "type": "Effect",
          "effectPreset": "ColorFade"
        },
        {
          "dmxRange": [151, 200],
          "type": "Effect",
          "effectName": "Color pulse"
        },
        {
          "dmxRange": [201, 255],
          "type": "Effect",
          "effectName": "Sound control",
          "soundControlled": true
        }
      ]
    },
    "Effect Speed": {
      "capability": {
        "type": "EffectSpeed",
        "speedStart": "slow",
        "speedEnd": "fast"
      }
    },
    "Red": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Red"
      }
    },
    "Green": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Green"
      }
    },
    "Blue": {
      "capability": {
        "type": "ColorIntensity",
        "color": "Blue"
      }
    }
  },
  "modes": [
    {
      "name": "7-channel",
      "shortName": "7ch",
      "channels": [
        "Master Dimmer",
        "Strobe",
        "Effects",
        "Effect Speed",
        "Red",
        "Green",
        "Blue"
      ]
    }
  ]
}
